.form-group.schema-form-submit(class='{{form.htmlClass}}')
  input.btn(type='submit', class="{{ form.style || 'btn-primary' }} {{form.fieldHtmlClass}}", value='{{form.title}}', ng-disabled='form.readonly', ng-if="form.type === 'submit'")
  button.btn(class="{{ form.style || 'btn-default' }}", type='button', ng-click='buttonClick($event,form)', ng-disabled='form.readonly', ng-if="form.type !== 'submit'")
    span.(ng-if='form.icon', class='{{form.icon}}')
    |  {{form.title}}
