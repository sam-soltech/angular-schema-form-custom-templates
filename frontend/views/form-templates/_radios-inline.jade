.form-group.schema-form-radios-inline(class='{{form.htmlClass}}', ng-class="{'has-error': form.disableErrorState !== true && hasError(), 'has-success': form.disableSuccessState !== true && hasSuccess()}")
  label.control-label(ng-model='$$value$$', ng-model-options='form.ngModelOptions', schema-validate='form', class='{{form.labelHtmlClass}}', ng-show='showTitle()') {{form.title}}
  div
    label.radio-inline(ng-repeat='item in form.titleMap')
      input.(type='radio', class='{{form.fieldHtmlClass}}', sf-changed='form', ng-disabled='form.readonly', ng-model='$$value$$', ng-value='item.value', name="{{form.key.join('.')}}")
      span(ng-bind-html='item.name')
  .help-block(sf-message='form.description')
